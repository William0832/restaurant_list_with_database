<link rel="stylesheet" href="/stylesheets/show.css">

<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      {{!-- buttons --}}
      <div class="text-left d-flex mb-2">
        <a href="/" class="btn btn-light btn-sm border-dark">Back</a>
        <a href=" /edit/{{restaurant._id}}" class="btn btn-sm btn-secondary border-dark ml-2">Edit</a>
        <form action="/delete/{{restaurant._id}}" method="post">

          {{!-- modal box --}}
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">

                <div class="modal-header">
                  <h5 class="modal-title text-danger" id="exampleModalLabel">刪除警告</h5>
                </div>

                <div class="modal-body text-left">
                  <p>確定要<span class="font-weight-bold text-danger">刪除</span>此筆資料嗎?</p>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-light border-dark" data-dismiss="modal">Back</button>
                  <button type="submit" class="btn btn-danger border-dark">Delete</button>
                </div>
              </div>
            </div>
          </div>

          <button type="button" class="btn btn-sm btn-dark text-white ml-2" data-toggle="modal"
            data-target="#exampleModal">
            Delete
          </button>
        </form>
      </div>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>